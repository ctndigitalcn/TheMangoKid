
@{
    ViewBag.Title = "Super Admin Profile";
}
<div class="container" id="profile_container">
    <!--Notice from super admin-->
    <div class="row">
        <div class="col-lg-12">
            <blockquote class="generic-blockquote">
                “Website maintainance notice”
            </blockquote>
        </div>
    </div>

    <!--Error Display section from another action/controller-->
    @if (TempData["ErrorMsg"] != null)
    {
        <div class="section-top-border">
            <div class="row" style="justify-content:center">
                <h2 style="color:red"> @TempData["ErrorMsg"] </h2>
            </div>
        </div>
    }

    <!--Error Display section from same controller-->
    @if (ViewBag.ErrorMsg != null)
    {
        <div class="section-top-border">
            <div class="row" style="justify-content:center">
                <h2 style="color:red"> @ViewBag.ErrorMsg </h2>
            </div>
        </div>
    }

    <!--Album show table-->
    <div class="section-top-border">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="progress-table-wrap">
                    <div class="progress-table">
                        <div class="table-head">
                            <div class="serial"></div>
                            <div class="country">Track Name</div>
                            <div class="country">Artist Name</div>
                            <div class="country">Album Name</div>
                            <div class="serial">View</div>
                        </div>
                        @if (ViewBag.PendingAlbumsWithTrackDetail != null)
                        {
                            foreach (var album in ViewBag.PendingAlbumsWithTrackDetail)
                            {
                                <div class="table-row">
                                    <div class="serial"></div>
                                    <div class="country">@album.SingleTrackDetail.TrackTitle</div>
                                    <div class="country">@album.SingleTrackDetail.ArtistName</div>
                                    <div class="country">@album.Album.Album_Name</div>
                                    <div class="serial"><a class="genric-btn default circle arrow" href="@Url.Action("ShowAlbumTrackDetail","Solo",new { albumId = album.Album.Id, trackId=album.SingleTrackDetail.Id, StoreSubmissionStatus=album.StoreSubmissionStatus })"><i class="fa fa-eye fa-3x" aria-hidden="true"></i></a></div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Ep show table-->
    <div class="section-top-border">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="progress-table-wrap">
                    <div class="progress-table">
                        <div class="table-head">
                            <div class="serial"></div>
                            <div class="country">Track Name</div>
                            <div class="country">Artist Name </div>
                            <div class="country">EP Name</div>
                            <div class="serial">View</div>
                        </div>
                        @if (ViewBag.PendingEpsWithTrackDetail != null)
                        {
                            foreach (var ep in ViewBag.PendingEpsWithTrackDetail)
                            {
                                <div class="table-row">
                                    <div class="serial"></div>
                                    <div class="country">@ep.SingleTrackDetail.TrackTitle</div>
                                    <div class="country">@ep.SingleTrackDetail.ArtistName</div>
                                    <div class="country">@ep.ExtendedPlay.Ep_Name</div>
                                    <div class="serial"><a class="genric-btn default circle arrow" href="@Url.Action("ShowEpTrackDetail","Solo",new { epId = ep.ExtendedPlay.Id, trackId=ep.SingleTrackDetail.Id, StoreSubmissionStatus=ep.StoreSubmissionStatus })"><i class="fa fa-eye fa-3x" aria-hidden="true"></i></a></div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Single show table-->
    <div class="section-top-border">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="progress-table-wrap">
                    <div class="progress-table">
                        <div class="table-head">
                            <div class="serial"></div>
                            <div class="country">Single's Name</div>
                            <div class="serial">Release</div>
                            <div class="serial">View Track</div>
                        </div>
                        @if (ViewBag.PendingSolosWithTrackDetail != null)
                        {
                            foreach (var solo in ViewBag.PendingSolosWithTrackDetail)
                            {
                                <div class="table-row">
                                    <div class="serial"></div>
                                    <div class="country">@solo.SingleTrackDetail.TrackTitle</div>
                                    <div class="serial">@solo.SingleTrackDetail.ReleaseDate</div>
                                    <div class="serial"><a class="genric-btn default circle arrow" href="@Url.Action("ShowSoloTrackDetail","Solo",new { trackId = solo.SingleTrackDetail.Id, StoreSubmissionStatus= solo.StoreSubmissionStatus})"><i class="fa fa-eye fa-3x" aria-hidden="true"></i></a></div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

